{
  "name": "overwatch",
  "version": "1.0.0",
  "description": "A simple client-server application",
  "private": "true",
  "scripts": {
    "build": "tsc",
    "dev": "run-p dev:build dev:server",
    "dev:build": "tsc --watch",
    "dev:server": "nodemon --watch dist dist/server/index.js",
    "lint": "eslint --fix .",
    "format": "prettier --write .",
    "start": "node dist/server/index.js",
    "test": "echo \"Write tests!\"",
    "prepare": "husky install"
  },
  "author": "Christian Danielsen",
  "license": "UNLICENSED",
  "dependencies": {
    "express": "^4.18.2"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@types/express": "^4.17.18",
    "@types/node": "^20.7.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "3.0.3",
    "typescript": "^5.2.2"
  }
}
